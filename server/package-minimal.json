{
  "name": "campus-vibe-server",
  "version": "1.0.0",
  "description": "Backend server for Campus Vibe application",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "node tests/deployment-tests.js",
    "test:deployment": "node tests/deployment-tests.js",
    "test:health": "node -e \"const axios = require('axios'); axios.get('http://localhost:5001/api/health').then(r => console.log('✅ Health check passed:', r.data.status)).catch(e => { console.error('❌ Health check failed:', e.message); process.exit(1); })\"",
    "validate:deployment": "node ../scripts/validate-deployment.js",
    "health:quick": "node ../scripts/quick-health-check.js",
    "health:production": "node ../scripts/production-health-check.js",
    "deploy": "serverless deploy --verbose",
    "deploy:dev": "serverless deploy --stage dev --verbose",
    "deploy:prod": "serverless deploy --stage prod --verbose",
    "deploy:production": "serverless deploy --stage prod --verbose",
    "serverless": "serverless deploy",
    "serverless:dev": "serverless offline start --host 0.0.0.0",
    "serverless:logs": "serverless logs -f api --tail",
    "serverless:remove": "serverless remove",
    "validate-env": "node -e \"require('dotenv').config(); console.log('Environment variables loaded successfully'); process.exit(process.env.MONGODB_URI ? 0 : 1)\"",
    "pre-deploy": "npm run validate-env && echo 'Pre-deployment checks passed'",
    "post-deploy": "npm run test:deployment",
    "deploy:monitoring": "bash ../scripts/deploy-monitoring.sh",
    "analyze:costs": "bash ../scripts/analyze-costs.sh",
    "analyze:costs:detailed": "bash ../scripts/analyze-costs.sh --detailed --recommendations",
    "lambda:test": "serverless invoke local -f api --path test-event.json"
  },
  "keywords": [
    "express",
    "mongodb",
    "socket.io",
    "campus"
  ],
  "author": "Campus Vibe Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "compromise-numbers": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "5.9",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "nodemailer": "^7.0.5",
    "serverless-http": "^3.2.0",
    "serverless-plugin-aws-alerts": "^1.7.5",
    "socket.io": "^4.7.4",
    "transformers-node": "^2.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.0"
  }
}
