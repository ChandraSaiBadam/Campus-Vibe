# Production Environment Variables for AWS Deployment
# Copy this to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campusconnect?retryWrites=true&w=majority

# Server Configuration
PORT=8080
NODE_ENV=production

# Security
JWT_SECRET=your-secure-jwt-secret-here
ADMIN_SECRET=your-admin-secret-here

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Socket.IO Configuration (if implemented)
SOCKET_CORS_ORIGIN=https://yourdomain.com

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_SERVICE=gmail
FRONTEND_URL=https://your-s3-bucket-name.s3.amazonaws.com

# AWS Configuration (for future use)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key